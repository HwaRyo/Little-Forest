<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".PhoneLoginActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/phone_login_my_toolbar"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_alignParentTop="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/phone_login_toolbar_title_image"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:layout_marginStart="3dp"
                android:layout_marginTop="3dp"
                android:layout_marginEnd="3dp"
                android:layout_marginBottom="3dp"
                android:scaleType="fitCenter"
                android:src="@drawable/wordlogo2" />

            <ImageView
                android:id="@+id/phone_login_toolbar_btn_back"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="22dp"
                android:src="@drawable/ic_arrow_back" />
        </RelativeLayout>
    </androidx.appcompat.widget.Toolbar>

    <LinearLayout
        android:id="@+id/phone_lo"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="10dp"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp"
        android:background="@drawable/loding2">

        <ImageView
            android:id="@+id/phone_img"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:background="@color/black"
            android:src="@drawable/common_full_open_on_phone" />

        <LinearLayout
            android:id="@+id/phone_get_lo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="전화번호"
                android:textAlignment="center"
                android:textColor="@color/black" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="Please Enter Your Phone Number"
                android:textAlignment="center"
                android:textColor="#777777" />

            <EditText
                android:id="@+id/phone_gnumber_et"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:hint="+82 1012345678"
                android:maxLength="13"
                android:inputType="phone"
                android:textAlignment="center"
                android:textColor="#000"
                android:textColorHint="#c5c5c5" />

            <Button
                android:id="@+id/phone_gnumber_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="전송하기" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/phone_set_lo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="인증 번호"
                android:textAlignment="center"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/phone_snumber_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="Please Enter the verification code"
                android:textAlignment="center"
                android:textColor="#777777" />

            <EditText
                android:id="@+id/phone_snumber_et"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:hint="123456"
                android:maxLength="6"
                android:inputType="phone"
                android:textAlignment="center"
                android:textColor="#000"
                android:textColorHint="#c5c5c5" />

            <TextView
                android:id="@+id/phone_resnumber_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:layout_gravity="center_horizontal"
                android:textAlignment="center"
                android:gravity="center"
                android:text="@string/resend"
                android:textColor="#0738CA" />

            <Button
                android:id="@+id/phone_snumber_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="인증하기" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
