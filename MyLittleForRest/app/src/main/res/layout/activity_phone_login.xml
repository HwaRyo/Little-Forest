<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PhoneLoginActivity">

    <LinearLayout
        android:id="@+id/phone_lo"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="10dp"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp"
        android:background="#eeeeee">

        <ImageView
            android:id="@+id/phone_img"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:background="@color/black"
            android:src="@drawable/common_full_open_on_phone" />

        <LinearLayout
            android:id="@+id/phone_get_lo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="전화번호"
                android:textAlignment="center"
                android:textColor="@color/black" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="Please Enter Your Phone Number"
                android:textAlignment="center"
                android:textColor="#777777" />

            <EditText
                android:id="@+id/phone_gnumber_et"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:background="@color/white"
                android:hint="+82xxxxxxxxxxx"
                android:inputType="phone"
                android:textAlignment="center"
                android:textColor="#000"
                android:textColorHint="#c5c5c5" />

            <Button
                android:id="@+id/phone_gnumber_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="전송하기" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/phone_set_lo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="인증 번호"
                android:textAlignment="center"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/phone_snumber_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="Please Enter the verification code"
                android:textAlignment="center"
                android:textColor="#777777" />

            <EditText
                android:id="@+id/phone_snumber_et"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:background="@color/white"
                android:hint="+82xxxxxxxxxxx"
                android:inputType="phone"
                android:textAlignment="center"
                android:textColor="#000"
                android:textColorHint="#c5c5c5" />

            <TextView
                android:id="@+id/phone_resnumber_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:gravity="center"
                android:text="재전송이 필요하신가요?"
                android:textColor="#777777" />

            <Button
                android:id="@+id/phone_snumber_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="인증하기" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>